@model IEnumerable<law.m.aaron.Models.HighScore>

<div class="container game-content" id="game-content">
    <div id="game-container">
    </div>
    <section class="showcase auto-margin">
        <div class="nes-container is-dark with-title" style="max-width: 800px">
            <p class="title">Controls</p>
            <p>Press or Click to Jump.</p>
        </div>
    </section>
    <br />&nbsp;
    <section class="showcase auto-margin">
            <div class="nes-container is-dark with-title" style="max-width: 800px">
                <p class="title">High Scores</p>
                <table class="nes-table is-dark" style="width: 100%;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Score)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Score)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </section>
</div>

<environment include="Development">
    <script src="~/js/game/utils/align.js"></script>
    <script src="~/js/game/utils/alignGrid.js"></script>
    <script src="~/js/game/utils/UIBlock.js"></script>
    <script src="~/js/infinite-runner/InfiniteRunnerPreloadScene.js"></script>
    <script src="~/js/infinite-runner/InfiniteRunnerTitleScene.js"></script>
    <script src="~/js/infinite-runner/InfiniteRunnerGameScene.js"></script>
    <script src="~/js/infinite-runner/InfiniteRunnerGameOverScene.js"></script>
    <script src="~/js/infinite-runner/SoundControl.js"></script>
    <script src="~/js/infinite-runner/InfiniteRunnerConfig.js"></script>
</environment>

<environment exclude="Development">
    <script src="~/js/game2.min.js"></script>
</environment>
